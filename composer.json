{
  "name": "ltb-project/self-service-password",
  "license": "GPLv3",
  "type": "project",
  "description": "LDAP Tool Box Self-Service Password",
  "require": {
    "php": ">=5.4",
    "twig/twig": "~1.34",
    "defuse/php-encryption": "~2.0",
    "google/recaptcha": "~1.1",
    "psr/log": "~1.0",
    "symfony/framework-bundle": "~2.8",
    "symfony/twig-bundle": "~2.8",
    "symfony/debug-bundle": "~2.8",
    "symfony/web-profiler-bundle": "~2.8",
    "symfony/swiftmailer-bundle": "~2.6",
    "symfony/monolog-bundle" : "~2.12",
    "symfony/console": "~2.8",
    "symfony/process": "~2.8",
    "symfony/event-dispatcher": "~2.8",
    "symfony/dependency-injection": "~2.8",
    "symfony/expression-language": "~2.8",
    "symfony/polyfill-php56": "~1.6",
    "gregwar/captcha": "~1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "4.8.*",
    "squizlabs/php_codesniffer": "3.*",
    "escapestudios/symfony2-coding-standard": "3.x-dev",
    "symfony/browser-kit": "~2.8",
    "symfony/css-selector": "~2.8",
    "codeception/codeception": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "config": {
    "platform": {
      "php": "5.4.26"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\Unit\\": "tests/unit",
      "App\\Tests\\Functional\\": "tests/functional",
      "App\\Tests\\Acceptance\\": "tests/acceptance",
      "App\\Tests\\Integration\\": "tests/integration"
    }
  },
  "scripts": {
    "tests": "php ./vendor/codeception/codeception/codecept run --html --xml",
    "coverage": "php ./vendor/codeception/codeception/codecept run --steps --html --xml --coverage --coverage-html --coverage-xml"
  }
}
